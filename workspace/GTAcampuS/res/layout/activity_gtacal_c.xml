        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:layout_weight="1"
        android:background="@drawable/myshape"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="âˆš"/>

    

        <Button
